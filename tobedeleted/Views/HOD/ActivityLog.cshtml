
@{
    ViewData["Title"] = "ActivityLog";
    Layout = "~/Pages/_LayoutHOD.cshtml";
}

<h1>ActivityLog</h1>
<br />
<div class="container mt-5">
    <div class="row">
        <div class="col-sm-8">
            <hr>
            <style>
                table {
                    width: 100%;
                }

                table, th, td {
                    border: 1px solid black;
                    border-collapse: collapse;
                }

                th, td {
                    padding: 5px;
                    text-align: center;
                }

                table.names tr:nth-child(even) {
                    background-color: #eee;
                }

                table.names tr:nth-child(odd) {
                    background-color: #fff;
                }

                table.names th {
                    background-color: black;
                    color: white
                }
            </style>


</div>


