
@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Pages/_LayoutHOD.cshtml";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <title>Head of Department</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        .fakeimg {
            height: 200px;
            background: #fff;
        }
    </style>
</head>
<body>
    <header class="justify-content-center">
        <h1> Departments </h1>
    </header>
    <div class="row justify-content">
        
        <div class="card m-1 mt-2 ml-2 mr-2" style="width:300px">

            <h4 class="card-title">Mathematics</h4>
            <a href="#" class="btn btn-primary">View Department</a>

            <img class="card-img-top" src="~/css/Images/maths.jpg" alt="Card image">
        </div>

        <div class="card m-1 mt-2 ml-2 m-2" style="width:300px">

            <h4 class="card-title">School of IT</h4>
            <a href="#" class="btn btn-primary">View Subject</a>

            <img class="card-img-top" src="~/css/Images/School Of IT.jpg" alt="Card image">
        </div>

        <div class="card m-1 mt-2 ml-2 mr-2" style="width:300px">

            <h4 class="card-title">Commerce</h4>
            <a asp-area="" asp-controller="HOD" asp-action="Commerce" class="btn btn-primary">View Subjects</a>

            <img class="card-img-top" src="~/css/Images/Commerce.jpg" alt="Card image">
        </div>

        <div class="card m-1 mt-2 ml-2 mr-2" style="width:300px">

            <h4 class="card-title">Sciences Department</h4>
            <a href="#" class="btn btn-primary">View Subjects</a>

            <img class="card-img-top" src="~/css/Images/PhysicalSciences.jpg" alt="Card image">
        </div>

    </div>


    <style type="text/css">


        .card {
            align-items: center;
            border: 5px unset #000000;
            float: left;
            box-shadow: 0 0 15px #808080;
            flex-direction: row;
            /* padding: 10px 20px;*/
            flex-flow: wrap;
            align-self: normal;
            display: flex;
            height: 250px;
            width: 100px;
            margin: 0 auto;
            display: flex;
            justify-content: space-around;
        }

        .card-img-top {
            max-width: 200px;
            max-height: 200px;
        }
    </style>

    <div class="container mt-5">

        <div class="row float-right">
            <div class="col-sm-8">
                @*<p style="text-align:center;">You are viewing upcoming meetings</p>
                    <hr>*@
                <style>
                    table {
                        width: 100%;
                    }

                    table, th, td {
                        border: 1px solid black;
                        border-collapse: collapse;
                    }

                    th, td {
                        padding: 5px;
                        text-align: center;
                    }

                    table.names tr:nth-child(even) {
                        background-color: #fff;
                    }

                    table.names tr:nth-child(odd) {
                        background-color: #fff;
                    }

                    table.names th {
                        background-color: black;
                        color: white
                    }
                </style>

                <br>

                @*<hr>

                    <hr>*@
            </div>
        </div>
    </div>

</body>
</html>

