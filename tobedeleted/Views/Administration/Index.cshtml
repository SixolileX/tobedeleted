@model List<Microsoft.AspNetCore.Identity.IdentityUser>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/_LayoutAdmin.cshtml";
}


<h3 class="text-center">User Role Management</h3>
<hr />
@await Html.PartialAsync("_TopMenuPartial")
<div class="container">


    <div class=" row">
        <div class="col-12">
            @if (Model.Count == 0)
            {
                <p>no Users</p>
            }
            else
            {
                <table class="table">
                    <thead class="bg-danger text-white">
                        <tr>
                            <th>UserName</th>
                            <th>Action</th>
                        </tr>

                    </thead>
                    <tbody>
                        @foreach (var u in Model)
                        {
                            <tr>
                                <td>@u.UserName</td>
                                <td>
                                    <a class="btn btn-success"
                                       asp-route-userId="@u.Id"
                                       asp-action="Details">
                                        View Details
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }

        </div>

    </div>

</div>