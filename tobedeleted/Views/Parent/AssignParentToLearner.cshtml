@model tobedeleted.Models.AssignLearnerToParent
@{
    ViewData["Title"] = "AssignParentToLearner";
    Layout = "~/Pages/_LayoutParent.cshtml";
}

<h1>AssignParentToLearner</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="AssignParentToLearner" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label>Select Username</label>
                <select asp-for="userLearnerId" class="form-control">
                    <option selected disabled>--select user--</option>
                    @foreach (ApplicationUser U in ViewBag.Userss)
                    {
                        <option  asp-for="userLearnerId" value="@U.Id">@U.firstName , @U.lastName</option>
                    }
                </select>
            </div>

            <div>
                <input id="btnSave" type="submit" class="btn btn-outline-primary btn-block" value="Assign" />
                @*<button id="btnRead" class="btn btn-primary" style="width:100%;margin-top:100%;"> Read</button>*@
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Dashboad">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
