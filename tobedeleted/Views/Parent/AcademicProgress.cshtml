@model IEnumerable<tobedeleted.Models.StuMark>
@{
    ViewData["Title"] = "AcademicProgress";
    Layout = "~/Pages/_LayoutParent.cshtml";


}
<br />
<br />
<br />
<div class="text-center">
    <h3 class="display-7">Academic Progress</h3>
    <p>Sixolile Sobetwa</p>
    <p>Learner</p>
    <hr />
</div>

<div class="container mt-5">
    <div class="row">
        <div class="col-sm-8">
            <hr>
            <style>
                table {
                    width: stretch;
                    position: center;
                }

                table, th, td {
                    border: 1px solid black;
                    border-collapse: collapse;
                }

                th, td {
                    padding: 5px;
                    text-align: center;
                }

                table.names tr:nth-child(even) {
                    background-color: #eee;
                }

                table.names tr:nth-child(odd) {
                    background-color: #fff;
                }

                table.names th {
                    background-color: black;
                    color: white
                }
            </style>






            <br />
            <br />
        </div>

        <br />
        <br />
        <br />
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.LearnerIdUser)
                    </th>
                   
                    <th>
                        @Html.DisplayNameFor(model => model.SubjectName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Term1)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Term2)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Term3)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Term4)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.LearnerIdUser)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SubjectName)
                        </td>
                      
                        <td>
                            @Html.DisplayFor(modelItem => item.Term1)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Term2)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Term3)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Term4)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <br />
        <br />

        <a href="/images/Report.pdf" download="file">
            <b> download </b>
        </a>
