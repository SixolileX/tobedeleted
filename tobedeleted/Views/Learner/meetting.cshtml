@{
    ViewData["Title"] = "Schedule Meeting";
    Layout = "~/Pages/_LayoutLearner.cshtml";
    @model tobedeleted.Models.studentMeeting;


}

<br />
<h2>Meetings</h2>

<form method="post" asp-action="Meetting">
    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row text-center">

        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-6">
                        <label asp-for="Meetingdesc"></label>
                        <input asp-for="Meetingdesc" class="form-control" />
                        <span asp-validation-for="Meetingdesc" class="text-danger"></span>
                    </div>
                    <div class="col-6">
                        <label asp-for="setdate"></label>
                        <input asp-for="setdate" class="form-control" />
                        <span asp-validation-for="setdate" class="text-danger"></span>
                    </div>


                </div>


                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-auto" value="Schedule meeting" />
                        </div>
                        <div class="col">
                            <a asp-action="Meetting" class="btn btn-danger w-auto">Back</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
    </form>
