@model IEnumerable<tobedeleted.Models.StuMark>
@using Microsoft.AspNetCore.Identity
@using tobedeleted.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@{
    ViewData["Title"] = "AcademicProgress";
    Layout = "~/Pages/_LayoutTeacher.cshtml";


}
<br />
<br />
<br />
<div class="text-center">
    <h3 class="display-7">Academic Progress</h3>
    <hr />
</div>

<head>
    <title>Bootstrap Example</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js"></script>
</head>
<div class="col-6">
    <label><b>Full Name: </b><span class="d-none d-lg-inline">@UserManager.GetUserAsync(User).Result.firstName   @UserManager.GetUserAsync(User).Result.lastName</span></label><br />
    <label><b>Email: </b><span class="d-none d-lg-inline">@UserManager.GetUserAsync(User).Result.Email </span></label><br />
    <label><b>Date: </b><span class="d-none d-lg-inline">@DateTime.Now</span></label><br />
    <label><b>Address: </b><span class="d-none d-lg-inline">@UserManager.GetUserAsync(User).Result.Addressline1, @UserManager.GetUserAsync(User).Result.Addressline2</span></label><br />
    <label><b>Contact No: </b><span class="d-none d-lg-inline">@UserManager.GetUserAsync(User).Result.PhoneNumber</span></label>
</div>
<div class="col-6">
    
    <body>

        <div class="container mt-3">
            <h2></h2>
            <p>Assessment report listed in a table for the last term</p>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Learners</th>
                        <th>Assignments</th>
                        <th>Quizzes</th>
                        <th>Subject Average Mark(%)</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>8</td>
                        <td>1</td>
                        <td>2</td>
                        <td>65%</td>
                    </tr>
                    
                </tbody>
            </table>
        </div>
    </body>
</div>

<br />
<br />


