<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - learner</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://getbootstrap.com/docs/5.2/assets/css/docs.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>

    <style>
        /* Navbar container */
        .my_navbar {
            overflow: hidden;
            background-color: white;
            font-family: Arial;
        }

            /* Links inside the navbar */
        .my_navbar a {
            float: left;
            font-size: 16px;
            color: black;
            text-align: center;
            padding: 14px 16px;
            text-decoration: none;
        }

        /* The dropdown container */
        .my_dropdown {
            float: left;
            overflow: hidden;
        }

            /* Dropdown button */
        .my_dropdown .my_dropbtn {
            font-size: 16px;
            border: none;
            outline: none;
            color: black;
            padding: 14px 16px;
            background-color: inherit;
            font-family: inherit; /* Important for vertical align on mobile phones */
            margin: 0; /* Important for vertical align on mobile phones */
        }

            /* Add a red background color to navbar links on hover */
            .my_navbar a:hover ,.my_dropdown:hover ,.my_dropbtn .my_dropdown-content {
                background-color: dodgerblue;
            }

        /* Dropdown content (hidden by default) */
        .my_dropdown-content {
            display: none;
            position: absolute;
            background-color: white;
            min-width: 160px;
            box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
            z-index: 1;
        }

            /* Links inside the dropdown */
        .my_dropdown-content a {
            float: none;
            color: black;
            padding: 12px 16px;
            text-decoration: none;
            display: block;
            text-align: left;
            flood-color:Highlight;

        }

                /* Add a grey background color to dropdown links on hover */
            .my_dropdown-content a:hover {
                background-color: Highlight;
            }

        /* Show the dropdown menu on hover */
        .my_dropdown:hover .my_dropdown-content {
            display: block;
        }
    </style>
    <div contenteditable="false" class="p-3 mb-2 bg-dark text-white ">
        <header>

           

            <nav class="navbar navbar-expand-lg bg-light">
                <div class="container-fluid">
                    <img src="~/css/Images/lol.png" width="120" height="60" class="align-content-md-start" />
                    
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        
                        <div class="my_navbar">
                            @*<a class="navbar-brand" asp-area="" asp-controller="Learner" asp-action="DashBoards">HOME</a>*@

                            <a class="navbar-brand" asp-area="" asp-controller="Learner" asp-action="DashBoards">Dashboard</a>

                            <a class="navbar-brand" asp-area="" asp-controller="Learner" asp-action="Resultss">Results</a>

                            <a class="navbar-brand" asp-area="" asp-controller="Learner" asp-action="EnrollInSubject">Enroll</a>

                            <div class="my_dropdown">
                                <button class="my_dropbtn">
                                    My Subjects
                                    <i class="fa fa-caret-down"></i>
                                </button>
                                <div class="my_dropdown-content">
                                    <a class="nav-link active">@ViewBag.listofsubjects</a>
                                    <a class="nav-link active" asp-area="" asp-controller="Learner" asp-action="Maths"> Maths </a>
                                    <a class="nav-link active" asp-area="" asp-controller="Learner" asp-action="QuestionPA"> Question Papers </a>
                                    <a class="nav-link active" asp-area="" asp-controller="Learner" asp-action="Report"> Report </a>
                                </div>

                            </div>
                            <div class="my_dropdown">
                                <button class="my_dropbtn">
                                    Meeting
                                    <i class="fa fa-caret-down"></i>
                                </button>
                                <div class="my_dropdown-content">
                                    <a class="nav-link active" asp-area="" asp-controller="Learner" asp-action="Meetting"> Make Meeting</a>
                                    <a class="nav-link active" asp-area="" asp-controller="Learner" asp-action="MeetingView"> View Meeting </a>
                                </div>

                            </div>
                        </div>


                        </div>
                    @*<form class="d-flex">
                    <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                    <button class="btn btn-outline-success" type="submit">Search</button>
                    </form>*@
                </div>
                <partial name="_LoginPartial" />
            </nav>

            
        </header>
    </div>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - learner - <a asp-area="" asp-controller="Home" asp-action="Index">Privacy</a>
        </div>
       

    </footer>
    
</body>
</html>